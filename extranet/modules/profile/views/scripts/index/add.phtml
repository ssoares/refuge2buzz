                        toInsert += "       </a>";
                        toInsert += "   </td>";
                        toInsert += "</tr>";
                    }
                    $("#tbodyNewsletter").append(toInsert);
                    
                    $('#memberNewslettersCat').val(memberNewslettersCat);
                }
            ); 
            
