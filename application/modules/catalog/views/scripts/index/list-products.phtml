                <?php if (!empty($data['P_Photo'])) : ?>
                <?php echo $this->link($url,
                        $this->moduleImage(
                            'catalog', 'products/' . $data['P_ID'], $data['P_Photo'], 'medium'
                        )
                    );
                ?>
                <?php else: ?>
                    <?php echo $this->clientImage('logo.png'); ?>
                <?php endif; ?>
            </p>
