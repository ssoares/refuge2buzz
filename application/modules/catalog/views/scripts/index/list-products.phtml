$i = 1;
$columns = 2;
$this->headTitle($this->title);
$this->pageTitle($this->title);
?>
<div id="contentCatalog" class="block catalog">
    <?php foreach ($this->paginator as $name => $data): ?>
        <?php $class = ($i % $columns == 0) ? 'right' : 'left'; ?>
        <div class="list <?php echo $class; ?>">
            <?php
            $name = $data["PI_Name"];
