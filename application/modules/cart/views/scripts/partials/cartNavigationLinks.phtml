            <li class="module-navigation-arrow module-navigation-previous">
                <a href="<?php echo $this->urlBack; ?>"><?php echo $this->getClientText($backButtonLabel) ?></a>
            </li>
        <?php endif; ?>

        <?php if (!empty($this->itemCount)): ?>
            <li class="module-navigation-arrow module-navigation-next">
                <a id="stepToNext" href="#"><?php echo $this->getClientText("form_label_paypal_pay") ?></a>
            </li>
        <?php endif; ?>

        <?php if (!empty($this->customNext)): ?>
            <li class="module-navigation-arrow module-navigation-next">
                <a id="stepTopNext" href="#" class="<?php echo $this->customNext ?>"><?php echo $this->getCibleText($customSubmitLabel) ?></a>
            </li>
        <?php endif; ?>
        <?php if (!empty($this->customSubmit)): ?>
            <li class="module-navigation-arrow module-navigation-submit">
                <button id="toexternalpage" class="<?php echo $this->customSubmit ?> button-submit"><?php echo $this->getCibleText($customSubmitLabel) ?></button>
            </li>
        <?php endif; ?>

    </ul>
</div>
