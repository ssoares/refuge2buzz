<?php
$moreClasses = '';
if ($this->step > 1)
    $backButtonLabel = 'form_label_prev_step_btn';
else
    $backButtonLabel = 'btn_cart_add_another';

if ($this->step > 2)
    $customSubmitLabel = 'form_label_confirm_order_btn';
else
    $customSubmitLabel = 'form_label_next_step_btn';

if (isset($this->moreClass))
    $moreClasses = $this->moreClass;
?>
<div class='module-pagination pagination'>
    <ul id="cart-big-buttons" class="module-paginatio-list pagination-list <?php echo $moreClasses; ?>">
